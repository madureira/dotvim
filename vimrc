call pathogen#infect()

set encoding=utf-8

" enable syntax highlighting
syntax on

" enable file type detection
filetype plugin on

" enable file type detection
filetype indent on

" enable mouse selection
set mouse=a

set tabstop=4

" set softtabstop=4

" set shiftwidth=4

set noexpandtab

set number

set list listchars=tab:▸\ ,trail:·,eol:¬,extends:❯,precedes:❮
